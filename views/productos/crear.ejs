      <div class="page-content">
        <div class="row">
          
          <div class="col-md-2">
            <div class="sidebar content-box" style="display: block;">

              <ul class="list-group">
                  <li class="list-group-item">
                    <a href="/">Productos</a>
                  </li>
                  <li class="list-group-item">
                    <a href="/prove">Proveedores</a>
                  </li>
              </ul>
            </div>
