          <div class="row" align="center">
              </div>
          </div>           
          
          
        </div>



    <footer class="text-muted mt-3 mb-3">
    </footer>
    <script type="text/javascript">
      fetch("http://localhost:3000/api/v1/proveedores/get").then(response => {
          if(response.ok) {
              return response.json();
          }
      }).then(data => {
          if(data) {
              console.log(data); 

              const ar = data; 
                let result = ``;
                ar.forEach((elem) => {
                    result += `<option value=${elem.nombreprov}>${elem.nombreprov}</option>`
                });
                document.getElementById("nomProv").innerHTML = result;
           };

          }
      ).catch(err => console.error(err));    
    </script>

