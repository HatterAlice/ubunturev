    <script type="text/javascript"> 

        var url = new URL(window.location.href);
        const id = url.searchParams.get("id");

        fetch("http://localhost:3000/api/v1/proveedores/get/"+ id).then(response => {
            if(response.ok) {
                return response.json();
            }
        }).then(data => {
            if(data) {
                console.log(data); 
                      document.getElementById("id").setAttribute('value', data._id); 
                      document.getElementById('actualizar').action = "http://localhost:3000/api/v1/proveedores/put/"+ data._id;
                      document.getElementById("nombreprov").setAttribute('value', data.nombreprov);                 
                      document.getElementById("telefono").setAttribute('value', data.telefono);                
            };

            }
        ).catch(err => console.error(err));

      
    </script>
    
